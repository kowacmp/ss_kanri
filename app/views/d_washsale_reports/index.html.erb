<%= form_tag(url_for(:action => 'search'),:remote => true) do %>
<table id='rounded-corner'>
	<tr>
	  <th>対象店舗</th>
	  <td><%= @shop.shop_cd %> | <%= @shop.shop_name %></td>
      <th>対象年月</th>
      <td><%= select_year(@time_now,:start_year => @start_year, :end_year => @time_now.year) %><%= select_month(@time_now,:use_month_numbers => true) %></td>
	  <td><%= submit_tag "検索" %></td>
      </tr>
</table>
<% end %>

<p>
	<div id="report">
	    <%= render partial: 'report'%>
	</div>
</p>
