<h1>人件費</h1>
<%= form_tag(url_for(:action => 'index'),{:remote => true, :method => "get"}) do %>
<table id='rounded-corner'>
	<tr>
	  <th>対象店舗</th>
	  <td>
	  	<% m_shop = MShop.find(@m_shop_id) %>
	  	<%= "#{m_shop.shop_cd}　#{m_shop.shop_name}" %>
	  </td> 
      <th>対象年月</th>
      <td>
      	<%= select_year(@head[:input_day].to_s[0,4].to_i, :prefix=>"", :field_name=>"input_day(1i)",
      	                :start_year => @start_year, :end_year => @head[:input_day].to_s[0,4].to_i) %>
      	<%= select_month(@head[:input_day].to_s[4,2].to_i, :prefix=>"", :field_name=>"input_day(2i)", :use_month_numbers => true) %></td>
	  </tr>
</table>
<% end %>

<div id="form">
	<%= render 'form' %>
</div>
