<table id='rounded-corner'>
  <tr>
    <th>コード区分</th>
    <th>コード</th>
    <th>コード名称</th>
    <th>コード名称１</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

<% @m_etcs.each do |m_etc| %>
  <tr>
    <td><%= m_etc.etc_cd %></td>
    <td><%= m_etc.etc_name %></td>
    <td><%= m_etc.etc_ryaku %></td>
    <td><%= m_etc.etc_tani %></td>
    <td><%= m_etc.etc_group %></td>
    <td class="icon"><%= link_to image_tag('icon/24_show.png'), m_etc %></td>
    <td class="icon"><%= link_to image_tag('icon/24_edit.png'), edit_m_etc_path(m_etc) %></td>
    
    <td class="icon">
    <%- if m_etc.deleted_flg == 1 -%>
    <%= link_to image_tag('icon/24_show.png'), m_etc, :confirm => '削除の取消をします。よろしいですか？', :method => :delete %>
    <%- else -%>
    <%= link_to image_tag('icon/24_delete.png'), m_etc, :confirm => '削除します。よろしいですか？', :method => :delete %>
    <%- end -%>
    </td>
    
  </tr>
<% end %>
</table>