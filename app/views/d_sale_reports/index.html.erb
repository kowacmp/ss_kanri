<h1>売上現金管理表一覧</h1>
<%= form_tag(url_for(:action => 'index'),{:remote => true, :method => "get"}) do %>
<table id='rounded-corner'>
	<tr>
      <th>対象年月</th>
      <td>
      	<%= select_year(@head[:input_day].to_s[0,4].to_i, :prefix=>"", :field_name=>"input_day(1i)",
      	                :start_year => @start_year, :end_year => @head[:input_day].to_s[0,4].to_i) %>
      	                年
      	<%= select_month(@head[:input_day].to_s[4,2].to_i, :prefix=>"", :field_name=>"input_day(2i)", :use_month_numbers => true) %>月</td>
	  <th>店舗種別</th>
	  <td>
		<%= select :head, :input_shop_kbn, 
        MCode.find(:all, :conditions=>["kbn='shop_kbn'and code<>'9'"], :order=>"code").collect{|i| [ "#{i.code_name}", i.code ]}, {:include_blank => true} %>
	  </td> 
	  <td><%= submit_tag "検索" %></td>
      </tr>
</table>
<% end %>

<p>
	<div id="report">
	    <%= render partial: 'report'%>
	</div>
</p>
