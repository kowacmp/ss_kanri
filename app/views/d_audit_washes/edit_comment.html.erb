コメントを入力してください<br/>
<textarea id="_comment" rows="10" cols="60" style="ime-mode: active;" maxlength="200"></textarea>
<br/>
<br/>
<input type="button" value="更新" onclick="return update_comment();">


<script>
	
$(function(){
	$("#_comment").val( $("#d_audit_wash_comment").val() );
});

function update_comment() {

	$("#d_audit_wash_comment").val( $("#_comment").val() );

	if ($("#comment_on").val() == "true") {
		$.post("<%=url_for(:action => "update_comment")%>",
		       { id      : $("#key_id").val() 
		        ,comment : $("#_comment").val()
		        ,authenticity_token : $("#authenticity_token").val() });
	}

	// 親フォームのhiddenに書込後、モーダル終了
	$("div#modal div.background").trigger("click");
}

</script>


