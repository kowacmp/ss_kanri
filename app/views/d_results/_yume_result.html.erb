<table id='rounded-corner' class="yumepoint_view_table" width="380">
  <thead>	
    <tr>
      <th style="min-width: 70px;">種別</th>
  	  <th style="min-width: 50px;">件数</th>
      <th style="min-width: 90px;">ポイント</th>
      <th style="min-width: 90px;">金額</th>
      <th style="min-width: 40px;">編集</th>
      <th style="min-width: 40px;">削除</th>
    </tr>
  </thead>

  <tbody>
	<% unless @d_result_yumepoints.blank? %>	
	  <% @d_result_yumepoints.each do |d_result_yumepoint| %>
	    <tr>
	      <td style="padding-left: 10px;"><%= d_result_yumepoint.code_name %></td>
	      <td class="input_no"><%= num_fmt(d_result_yumepoint.yumepoint_num) %></td>
	      <td class="input_no"><%= num_fmt(d_result_yumepoint.yumepoint) %></td>
	      <td class="input_no"><%= num_fmt(d_result_yumepoint.yumepoint_money) %></td>
	      <td align="center">
	        <%= link_to image_tag('icon/edit.png'), {:action => 'yume_edit', :id => d_result_yumepoint.id}, {:remote => true } %>
	      </td>
	      <td align="center">
	        <%= link_to image_tag('icon/delete.png'), {:action => 'yume_delete', :id => d_result_yumepoint.id}, {:remote => true, :confirm => '削除します。よろしいですか？' } %>
	      </td>
	    </tr>
	  <% end %>
	<% end %>
  </tbody>
</table>

<script>
  $(function () {
	  $('.yumepoint_view_table').tablefix({height: 400, fixRows: 1});
  });	
</script>
