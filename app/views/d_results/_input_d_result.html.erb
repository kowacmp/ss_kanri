  <% @oiletc1s.each do |oiletc1| %>
    <tr>
      <th><%= oiletc1.oiletc_name %></th> 	
      <td><%= number_field :etc1_pos1, "#{oiletc1.id}", :value => oiletc1.pos1_data, :size => 8 %></td>
