      <% for i in 1..m_etc.max_num %>
      <tr>
        <th><%= m_etc.etc_name + i.to_s %></th> 	
        <td><%= number_field :m_etc_pos1, "#{m_etc.id}_no#{i}", :value => m_etc.pos1_data, :size => 8 %></td>
