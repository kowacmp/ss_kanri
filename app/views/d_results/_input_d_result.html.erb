      <tr>
        <th><%= m_etc.etc_name + m_etc.no.to_s %></th> 	
        <td><%= number_field :m_etc_pos1, "#{m_etc.id}_no#{m_etc.no}", :value => m_etc.pos1_data, :size => 8 %></td>
