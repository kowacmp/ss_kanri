	  <th>油外販売</th>
	  <th>POS1</th>
	  <th>POS2</th>	
	  <th>POS3</th>
	  <th>POS日計</th>	
	</tr>
  <% @oiletc0s.each do |oiletc0| %>
    <tr>
      <th><%= oiletc0.oiletc_name %></th> 	
      <td><%= number_field :etc0_pos1, "#{oiletc0.id}", :value => oiletc0.pos1_data, :size => 8 %></td>
      <td><%= number_field :etc0_pos2, "#{oiletc0.id}", :value => oiletc0.pos2_data, :size => 8 %></td>
