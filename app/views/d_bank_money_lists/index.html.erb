<h1>銀行預金一覧表</h1>
<%= form_tag(url_for(:action => 'search'),:remote => true) do %>
<table id='rounded-corner'>
	<tr>
      <th>対象年月</th>
      <td><%= select_year(@time_now,:start_year => @start_year, :end_year => @time_now.year) %><%= select_month(@time_now,:use_month_numbers => true) %></td>
	  <th>店舗種別</th>
	  <td>
		<% shop_kbn_list = MCode.find(:all, :conditions => ["kbn='shop_kbn'and code<>'9'"], :order => "code").collect{|i| [i.code_name, i.code]} %>
		<%= select_tag "shop_kbn", options_for_select(shop_kbn_list) %>
	  </td> 
	  <td><%= submit_tag "検索" %></td>
      </tr>
</table>
<% end %>

<p>
	<div id="result">
	    <%= render partial: 'result'%>
	</div>
</p>
