		$("#d_audit_cashbox_cashbox<%=params[:id]%>_10000paper" ).val( $("#_10000paper" ).val() );
		$("#d_audit_cashbox_cashbox<%=params[:id]%>_5000paper"  ).val( $("#_5000paper"  ).val() );
		$("#d_audit_cashbox_cashbox<%=params[:id]%>_1000paper"  ).val( $("#_1000paper"  ).val() );
