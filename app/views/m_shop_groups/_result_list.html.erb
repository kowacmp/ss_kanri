<table id='rounded-corner'>
  <tr>
    <th>所属コード</th>
    <th>所属会社名</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

<% @m_shop_groups.each do |m_shop_group| %>
  <% if m_shop_group.deleted_flg == 0 %>
  	<% del_flg = "del_n" %>
  <% else %>
  	<% del_flg = "del_y" %>
  <% end %>
  
  <tr>
    <td class="<%= "#{del_flg}" %>"><%= m_shop_group.group_cd %></td>
    <td class="<%= "#{del_flg}" %>"><%= m_shop_group.group_name %></td>
    <td class="icon">
    	<%- if m_shop_group.deleted_flg == 0 -%>
    	<%= link_to image_tag('icon/24_edit.png'), {:action=>"edit",:id=>m_shop_group.id,:input_check=>@check_del_flg} %>
    	<%- end -%>
    </td>
    
    <td class="icon">
    <%- if m_shop_group.deleted_flg == 0 -%>
    <%= link_to image_tag('icon/24_delete.png'), {:action=>"destroy",:id=>m_shop_group.id,:input_check=>@check_del_flg}, :confirm => '削除します。よろしいですか？',:method => :delete %>
    <%- else -%>
    <%= link_to image_tag('icon/refresh.png'), {:action=>"destroy",:id=>m_shop_group.id,:input_check=>@check_del_flg}, :confirm => '削除の取消をします。よろしいですか？', :method => :delete %>
    <%- end -%>
    </td>
    
  </tr>
<% end %>
</table>