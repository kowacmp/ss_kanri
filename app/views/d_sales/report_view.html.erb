$(function () {
    //テーブルにスクロールバーを設定
    new superTable("report_view_table", {
      cssSkin : "sSky",
      headerRows : 1,
      fixedCols : 2,
      colWidths :  [40, 40, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100]
    });
    
})();	
</script>
