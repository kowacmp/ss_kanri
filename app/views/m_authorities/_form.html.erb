<%= form_for(@m_authority) do |f| %>
  <% if @m_authority.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@m_authority.errors.count, "") %> 件のエラーがあります。</h2>

      <ul>
      <% @m_authority.errors.full_messages.each do |msg| %>
        <li><%= sliceString(msg) %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= hidden_field "input",'check',:value=>@check_del_flg%>
  
  <table id='rounded-corner'>
  	<tr>
  	  <th><%= f.label '権限コード' %></th>
  	  <td><%= f.number_field :authority_cd, :style=>"ime-mode:disabled" ,:maxlength=>2 %></td>  	  
  	</tr>	  	
  	<tr>
  	  <th><%= f.label '権限名' %></th>
  	  <td><%= f.text_field :authority_name,:maxlength=>40 %></td>  	  
  	</tr>
  	
  	<tr>
  		<td align="left" style="border: none">
  			<%= link_to '戻る', {:action=>"index",:input_check=>@check_del_flg}, :class => 'return_icon' %>
		</td>
	  	<td align="right" style="border: none">
	  		<% if f.object.new_record? %>
			<%= f.submit "  登  録  ",:disable_with => "登録中.....",:confirm => '登録しても良いですか？' %>
			<% else %>
			<%= f.submit "  更  新  ",:disable_with => "更新中.....",:confirm => '更新しても良いですか？' %>
			<% end %>
		</td>
	</tr>
  	
  </table>  
  <!--div class="actions">
    <%#= f.submit f.object.new_record? ? '追加' : '更新' %>
  </div-->
<% end %>
