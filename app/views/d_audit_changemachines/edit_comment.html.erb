コメントを入力してください<br/>
<textarea id="_comment" rows="10" cols="60" style="ime-mode: active;"></textarea>
<br/>
<br/>
<input type="button" value="更新" onclick="return update_comment();">


<script>
	
$(function(){
	$("#_comment").val( $("#d_audit_changemachine_comment").val() );
});

function update_comment() {
	if ($("#_comment").val().length > 200) {
		alert("コメントは200文字以内で入力してください。");
		return false;
	} 

	$("#d_audit_changemachine_comment").val( $("#_comment").val() );

	// 親フォームのhiddenに書込後、モーダル終了
	$("div#modal div.background").trigger("click");
}

</script>


