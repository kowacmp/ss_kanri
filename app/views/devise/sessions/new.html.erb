<br><br><br><br><br><br>
<center>
  <div style="border-style:double; width: 450px; height: 150px; padding: 2%;">

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    
        <%= select_tag(:m_shop_id, options_from_collection_for_select(MShop.find(:all, 
                       :conditions => ["deleted_flg = 0"], :order => 'shop_cd'),
                       :id, :shop_name), :include_blank => "") %><br />
    
        <%= f.select(:account, 
            User.find(:all, :conditions => ["deleted_flg = 0"], :order => 'id').map do |u|
              [u.user_name,u.account]
            end, :prompt => "選択して下さい") %>

        <div>
	        <%= f.label :password %><br />
	        <%= f.password_field :password, :size =>"10"%>
        </div>
        
        <div><%= f.submit "ログイン" %></div>
      <% end %>

      <%#= render "devise/shared/links" %>

  </div>
</center>

<script type="text/javascript">
  $("#m_shop_id").change(function(){
      var m_shop_id = $("#m_shop_id").val();
      $.get("/users/change_m_shop?m_shop_id=" + m_shop_id);
  });    	  
</script>

<style type="text/css">
  body{
	  background: #fff;
  }
  html{
	  background: #fff;
  }
</style>