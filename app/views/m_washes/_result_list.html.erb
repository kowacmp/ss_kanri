<table id='rounded-corner'>
  <tr>
    <th>洗車機コード</th>
    <th>洗車機名</th>
    <th>洗車機略称</th>
    <th>グループ種類</th>
    <th>最大数</th>
    <th>単価</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

<% @m_washes.each do |m_wash| %>
  <% if m_wash.deleted_flg == 0 %>
  	<% del_flg = "del_n" %>
  <% else %>
  	<% del_flg = "del_y" %>
  <% end %>
  <tr>
    <td class="<%= "#{del_flg}" %>"><%= m_wash.wash_cd %></td>
    <td class="<%= "#{del_flg}" %>"><%= m_wash.wash_name %></td>
    <td class="<%= "#{del_flg}" %>"><%= m_wash.wash_ryaku %></td>
    <td class="<%= "#{del_flg}" %>"><%= m_wash.wash_group_name %></td>
    <td class="<%= "#{del_flg}" %>" align="right"><%= m_wash.max_num %></td>
    <td class="<%= "#{del_flg}" %>" align="right"><%= number_with_delimiter(m_wash.price) %></td>
    <td class="icon">
    	<%- if m_wash.deleted_flg == 0 -%>
    	<%= link_to image_tag('icon/24_edit.png'), {:action=>"edit",:id=>m_wash.id,:input_check=>@check_del_flg} %></td>
    	<%- end -%>
    <td class="icon">
    <%- if m_wash.deleted_flg == 0 -%>
    <%= link_to image_tag('icon/24_delete.png'), {:action=>"destroy",:id=>m_wash.id,:input_check=>@check_del_flg}, :confirm => '削除します。よろしいですか？', :method => :delete %>
    <%- else -%>
    <%= link_to image_tag('icon/refresh.png'), {:action=>"destroy",:id=>m_wash.id,:input_check=>@check_del_flg}, :confirm => '削除の取消をします。よろしいですか？', :method => :delete %>
    <%- end -%>
    </td>
    
  </tr>
<% end %>
</table>