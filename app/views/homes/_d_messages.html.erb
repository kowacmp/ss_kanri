<table id='rounded-corner2'>
  <tr>
    <th width='450' colspan="4" class="title"><%= image_tag 'mail.png' %>メッセージ</th>
  </tr>
  <tr>
    <th width="19%">日付</th>
  	<th width="33%">タイトル</th>
    <th width="38%">内容</th>
    <th width="10%">削除</th>
  </tr>  
</table>

<div style="height:100px;width:475px;overflow-y:auto;overflow-x:hidden;">
  <table id='rounded-corner2'style="margin-top:-1px; width:454px;">
    <% @d_messages.each do |d_message| %>  
      <tr>
  	    <td width="19%"><%= d_message.send_day.strftime("%Y/%m/%d") %></td>
  	    <td width="33%"><%= d_message.display_name %></td>
  	    <td width="38%"><%= d_message.contents %></td>
  	    <td width="10%" align="center">
  	      <%#= link_to image_tag('icon/delete.png'), {:action => 'destroy_d_message'}, :confirm => '削除します。よろしいですか？', :method => :delete %>
  	      <%= link_to image_tag('icon/delete.png'), {:action => 'd_message_delete', :id => d_message.id}, {:remote => true, :confirm => '削除します。よろしいですか？' } %>
  	    </td>    	    
      </tr>
    <% end %>
  </table>
</div>