<br/><br/>
<table id='rounded-corner'>
  <caption>
  	１週間の予定　<%= @today.strftime("%Y年%m月%d日") %>　～　
  	<%= @end_day.strftime("%Y年%m月%d日") %>
  </caption> 	
  <tr>
  	<% for i in 0..6 %>
      <th width='100'>
      	<% day, wday = home_date_format(@today, i)%>
      	<%= day %>(<%= wday %>)
      </th>  	
  	<% end %>
  </tr>
  <tr height="70">
  	<% for i in 0..6 %>
      <td valign="top">
    	<% for r in 0..@m_washsale_plans.size - 1 %>
    	  <% if @m_washsale_plans[r][((@today + i.days).strftime("%A")).downcase].to_i == 1 %>
    	    <%= @m_washsale_plans[r].wash_name %><br/>
    	  <% end %>
    	<% end %>
      </td>
    <% end %>                  
  </tr>
</table>
<br/><br/>

<table id='rounded-corner2' class="event_view_table" width="900">
  <thead>	
    <tr>
  	  <th colspan="3" class="title" style="max-width: 900px;"><%= image_tag 'information.png' %>イベント通知</th>
    </tr>
    <tr>
  	  <th style="max-width: 90px;">実施日</th>
  	  <th style="max-width: 315px;">タイトル</th>
  	  <th style="max-width: 495px;">内容</th>  	  	
    </tr>
  </thead>
 
  <tbody> 
    <% @d_events.each do |d_event| %>
      <tr>
  	    <td><%= d_event.action_day %></td>
  	    <td><%= d_event.title %></td>
  	    <td><%= d_event.contents %></td>  	  	
      </tr>
    <% end %> 
  </tbody>
</table>
<br/><br/>

<div id="d_comments"><%= render 'd_comments' %></div>	

<script>
$(function () {
	$('.event_view_table').tablefix({width: 900, height: 165, fixRows: 2});
});	
$(function () {
	$('.comment_view_table').tablefix({width: 550, height: 165, fixRows: 2});
});	
</script>